
@{
    ViewData["Title"] = "Register";
}

@model RegisterViewModel



<section style="background: rgba(135,206,235,0.3); border-style: groove; width: 500px; border-width: 1px; align-content: center; margin-top: 100px">
    <div class="container-fluid">
        <h2>Registration</h2>
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input style="width: 300px" asp-for="Email" type="text" class="form-control" id="inputEmail" placeholder="Input Email">
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input style="width: 300px" asp-for="Password" type="text" class="form-control" id="inputNewPassword" placeholder="Password">
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <input style="width: 300px" asp-for="ConfirmPassword" type="text" class="form-control" id="inputRepeatPassword" placeholder="Confirm Password">
                </div>
                <div class="form-group">
                    <input type="submit" value="Register" class="btn btn-outline-dark" />
                </div>
            </div>
        </form>
    </div>
</section>