<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kunst</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>

        .like-checkbox {
            display: none;
        }

        .post {
            background-color: white;
        }

        .comment-content {
            background-color: #f0f0ed;
        }


        body {
            padding-top: 70px;
            background-color: #f0f0ed;
        }

        .header {
            background-color: rgba(102,102,102,0.5);
        }

        .profile-avatar {
            display: block;
            max-width: 70px;
            max-height: 70px;
            min-height: 70px;
            min-width: 70px;
            width: auto;
            height: auto;
            object-fit: cover
        }

        .post-text {
            padding-left: 70px
        }

        body {
        }

        .fullscreen-bg {
            position: fixed;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            overflow: hidden;
            z-index: -100;
        }

        .fullscreen-bg__video {
            position: absolute;
            top: 0;
            left: -125px;
            width: 120%;
            height: 120%;
        }

        #customfooter {
            position: fixed; 
            left: 0;
            bottom: 0; 
            padding: 10px;
            background: #B0E0E6; 
            color: black;
            width: 100%; 
        }
    </style>
    <!-- The video -->
</head>
<body class="body">
    <div class="fullscreen-bg">
        <video muted autoplay class="fullscreen-bg__video">
            <source src="~/lib/resources/speedart.mp4" type="video/mp4">
        </video>
    </div>
    <header>
        <nav class="header navbar fixed-top navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3" style="background-color: rgba(0,0,0,0.8) !important; border: none !important">
            <div class="header-nav container">
                <img src="~/lib/resources/sitelogo.png" height="40" width="90" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Artists" asp-action="Index">People</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-action="Register" asp-controller="Account">Register</a>
                        </li>
                        <li class="nav-item">
                            <a style="margin-left: 600px" class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Logout">Exit</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://www.instagram.com/pidyizd/">
                                <img src="~/lib/resources/insta.png" height="50" width="50" style="margin-left: 50px"
                                     class="nav-link text-light">
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div id="customfooter">
        &copy; Copyright by Anastasia Chernikova, KunstWebApp - 2020
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>